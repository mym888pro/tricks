import sys
import time

def upside_down(text):
    # ÁÆÄÂçïÁöÑÂÄíÁΩÆÂ≠óÁ¨¶Êò†Â∞Ñ
    char_map = {
        'a': '…ê', 'b': 'q', 'c': '…î', 'd': 'p', 'e': '«ù',
        'f': '…ü', 'g': '∆É', 'h': '…•', 'i': '·¥â', 'j': '…æ',
        'k': ' û', 'l': 'l', 'm': '…Ø', 'n': 'u', 'o': 'o',
        'p': 'd', 'q': 'b', 'r': '…π', 's': 's', 't': ' á',
        'u': 'n', 'v': ' å', 'w': ' ç', 'x': 'x', 'y': ' é',
        'z': 'z', 'A': '‚àÄ', 'B': 'êêí', 'C': '∆Ü', 'D': '·ó°',
        'E': '∆é', 'F': '‚Ñ≤', 'G': '‚ÖÅ', 'H': 'H', 'I': 'I',
        'J': '≈ø', 'K': ' û', 'L': 'À•', 'M': 'W', 'N': 'N',
        'O': 'O', 'P': '‘Ä', 'Q': 'Œå', 'R': '·¥ö', 'S': 'S',
        'T': '‚ä•', 'U': '‚à©', 'V': 'Œõ', 'W': 'M', 'X': 'X',
        'Y': '‚ÖÑ', 'Z': 'Z', '0': '0', '1': '∆ñ', '2': '·ÑÖ',
        '3': '∆ê', '4': '„Ñ£', '5': 'œõ', '6': '9', '7': '„Ñ•',
        '8': '8', '9': '6', ',': "'", '.': 'Àô', '?': '¬ø',
        '!': '¬°', '"': '‚Äû', "'": ',', '`': ',', '(': ')',
        ')': '(', '[': ']', ']': '[', '{': '}', '}': '{',
        '<': '>', '>': '<', '&': '‚Öã', '_': '‚Äæ', ';': 'ÿõ',
        ':': ':'
    }
    return ''.join(char_map.get(c, c) for c in reversed(text))

print("Ê≠£Âú®ÊøÄÊ¥ªÁªàÁ´ØÂÄíÁΩÆÊ®°Âºè...")
time.sleep(2)

while True:
    try:
        cmd = input("ÂÄíÁΩÆÁªàÁ´Ø $ ")
        if cmd.lower() in ['exit', 'quit']:
            print("(‚ïØ¬∞‚ñ°¬∞)‚ïØÔ∏µ ‚îª‚îÅ‚îª")
            break
        print(upside_down(cmd))
    except KeyboardInterrupt:
        print("(„Éé‡≤†Áõä‡≤†)„ÉéÂΩ°‚îª‚îÅ‚îª")
        break
